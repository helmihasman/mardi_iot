extends base_datatables
block content 
    section.content-header 
        h1 
            | Device
            
        ol.breadcrumb 
            li 
                a(href='#') 
                    i.fa.fa-dashboard
                    | Device > Add Device
            
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Add Device
                    
            .box-body
                form.form-horizontal(role='form',method='post' action='/admin_gateway/add')
                  - if (messages.msg_error) 
                                    .alert.alert-danger.alert-dismissable 
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true') 
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert! 
                                        | !{messages.msg_error}
                  div.form-group
                    label(for="gateway_desc",class="col-sm-2 control-label") Device Description
                    div.col-sm-6
                      input(type="text",class="form-control",id="gateway_desc",name="gateway_desc",placeholder="Gateway Description")
                  div.form-group
                    label(for="gateway_name",class="col-sm-2 control-label") Device Name
                    div.col-sm-6
                      input(type="text",class="form-control",id="gateway_name",name="gateway_name",placeholder="Gateway Name")
                  div.form-group
                    label(for="gateway_location",class="col-sm-2 control-label") Device Location
                    div.col-sm-6
                      select(id="gateway_location",name="gateway_location").col-sm-6
                       for row, index in data 
                        option(value="#{row.zone_id}") #{row.zone_name}
                  div.form-group
                    label(for="ip_address",class="col-sm-2 control-label") IP Address
                    div.col-sm-6
                      input(type="text",class="form-control",id="ip_address",name="ip_address",placeholder="IP Address")
                  div.form-group
                    label(for="mac_address",class="col-sm-2 control-label") MAC Address
                    div.col-sm-6
                      input(type="text",class="form-control",id="mac_address",name="mac_address",placeholder="IP Address")
                  div.form-group
                    label(for="asset_owner",class="col-sm-2 control-label")
                    div.col-sm-6
                      button(type="submit",class="btn btn-primary",id="save_btn",style="align:right") Save
                      |&nbsp&nbsp&nbsp
                      button(type="button",class="btn btn-danger",id="cancel_btn",style="align:right",onclick='goBack()') Cancel