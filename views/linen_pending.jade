extends base_datatables
block content 
    section.content-header 
        h1 
            | Linen
            
        ol.breadcrumb 
            li 
                a(href='#') 
                    i.fa.fa-dashboard
                    | Linen 
            
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Difference Quantity (Pending) &nbsp&nbsp
                    
                        
            .box-body
                .nav-tabs-custom
                    ul.nav.nav-tabs
                      li
                        a(href='/linen_soil') Soiled Linen
                      li
                        a(href='/linen_clean') Clean Linen
                      li.active
                        a(href='/linen_pending') Difference Quantity (Pending)
                    
                p#date_filter.pull-right
                            span#date-label-from.date-label Search by date: 
                            input#datepicker_from.date_range_filter.date(type='date')
                            
                p#date_filter.pull-left
                        form.form-horizontal(role='form',method='post' action='/linen_pending')
                          div.form-group
                            select(id="month_select",name="month_select") 
                                option(value="#{dmonth}") #{month_name}
                                option(value="--------------") --------------
                                option(value="1") January
                                option(value="2") February
                                option(value="3") March
                                option(value="4") April
                                option(value="5") May
                                option(value="6") June
                                option(value="7") July
                                option(value="8") August
                                option(value="9") September
                                option(value="10") October
                                option(value="11") November
                                option(value="12") December
                            select(id="year_select",name="year_select")
                                option(value="#{dyear}") #{dyear}
                                option(value="--------------") --------------
                                option(value="2017") 2017
                                option(value="2018") 2018
                                option(value="2019") 2019
                                option(value="2020") 2020
                                option(value="2021") 2021
                                option(value="2022") 2022
                            button(type="submit",id="save_btn") Search
                table(id="linen_table1",class="table table-bordered table-striped")
                            thead
                              tr
                                th(width='10%') No
                                th Date
                                th Clean
                                th Soil
                                th Pending

                            tbody
                                if messages.msg_error
                                         | !{messages.msg_error}
                                     else
                                         for row, index in data
                                            tr
                                                td #{index+1}
                                                td #{row.new_date}
                                                td #{row.clean}
                                                td #{row.soil}
                                                td #{row.pending}
                p#date_filter.pull-right
                    span#date-label(style='font-size:20px') Total : #{total_pending} 
                     
                                        
                                            