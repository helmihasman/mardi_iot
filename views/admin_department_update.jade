extends base_datatables
block content 
    section.content-header 
        h1 
            | Department
            
        ol.breadcrumb 
            li 
                a(href='#') 
                    i.fa.fa-dashboard
                    | Department > Update Department
            
    section.content
      for row, index in data
        .box
            .box-header.with-border
                h3.box-title
                    | Update Department
                    
            .box-body
                form.form-horizontal(role='form',method='post' action='/admin_department/update/#{row.dept_id}')
                  - if (messages.msg_error) 
                                    .alert.alert-danger.alert-dismissable 
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true') 
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert! 
                                        | !{messages.msg_error}
                  div.form-group
                    label(for="dept_code",class="col-sm-2 control-label") Department Code
                    div.col-sm-6
                      input(type="text",class="form-control",id="dept_code",name="dept_code",placeholder="Department Code",value="#{row.dept_code}")
                      input(type="hidden",id="users_id",name="users_id",value="#{row.dept_id}")
                  div.form-group
                    label(for="dept_desc",class="col-sm-2 control-label") Department Description
                    div.col-sm-6
                      input(type="text",class="form-control",id="dept_desc",name="dept_desc",placeholder="Department Description",value="#{row.dept_desc}")
                  div.form-group
                    label(for="pic_name",class="col-sm-2 control-label") PIC Name
                    div.col-sm-6
                      input(type="text",class="form-control",id="pic_name",name="pic_name",placeholder="PIC Name",value="#{row.dept_pic_name}")
                  div.form-group
                    label(for="email",class="col-sm-2 control-label") Email
                    div.col-sm-6
                      input(type="email",class="form-control",id="email",name="email",placeholder="Email",value="#{row.dept_email}")
                  div.form-group
                    label(for="asset_owner",class="col-sm-2 control-label")
                    div.col-sm-6
                      button(type="submit",class="btn btn-primary",id="save_btn",style="align:right") Save
                      |&nbsp&nbsp&nbsp
                      button(type="button",class="btn btn-danger",id="cancel_btn",style="align:right",onclick='goBack()') Cancel